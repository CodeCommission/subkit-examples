{
    "private": true,
    "version": "1.0.0",
    "name": "basic-graphql-api",
    "description": "SubKit GraphQL-Server basic example",
    "engines": {
      "node": "^6"
    },
    "dependencies": {
      "subkit": "latest"
    },
    "devDependencies": {
      "mocha": "^3.5.3",
      "nodemon": "^1.12.1"
    },
    "scripts": {
      "dev" : "nodemon --ext gql,js --exec subkit serve --port 8080 --graphiql",
      "start": "NODE_ENV=production subkit serve --port 80 --graphiql",
      "test": "mocha --require babel-polyfill --compilers js:babel-register"
    }
  }